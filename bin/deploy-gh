#!/bin/sh
# NOTE: always execute from the right repo root otherwise VERY BAD THINGS happen

set -e

if [ -n "$(git status --porcelain)" ]; then
    ls | grep -v CNAME | grep -v _site | xargs echo rm -rf
    echo mv _site/* .
    echo rm -rf _site
    echo git add -A . && echo git commit -m 'automated deploy'
else
    echo Repo not clean, cannot deploy.
    exit 1
fi
